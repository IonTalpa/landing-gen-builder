// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// MODELLER

model Project {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  sector      String?
  locale      String   @default("tr")
  styleTags   String   @default("[]")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  brand       Brand?
  assets      Assets?
  content     Content?
  layout      Layout?

  generated    Generated[]
  exports      Export[]
  chatMessages ChatMessage[]

  @@map("projects")
}

model Brand {
  id          String  @id @default(cuid())
  projectId   String  @unique
  project     Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  primary     String?
  secondary   String?
  palette     String  @default("[]")
  headingFont String  @default("{}")
  bodyFont    String  @default("{}")

  @@map("brands")
}

model Assets {
  id           String  @id @default(cuid())
  projectId    String  @unique
  project      Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  logoPath     String?
  galleryPaths String  @default("[]")

  @@map("assets")
}

model Content {
  id        String  @id @default(cuid())
  projectId String  @unique
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  title       String?
  subtitle    String?
  benefits    String  @default("[]")
  contact     String  @default("{}")
  heroText    String?
  about       String?

  @@map("contents")
}

model Layout {
  id        String  @id @default(cuid())
  projectId String  @unique
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  sections  String  @default("[]")
  grid      String?

  @@map("layouts")
}

model Generated {
  id         String   @id @default(cuid())
  projectId  String
  project    Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  version    Int      @default(1)
  themeJson  String   @default("{}")
  patterns   String   @default("[]")
  meta       String   @default("{}")

  createdAt  DateTime @default(now())

  @@index([projectId])
  @@map("generated")
}

model Export {
  id         String   @id @default(cuid())
  projectId  String
  project    Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  kind       String
  filePath   String
  status     String   @default("PENDING")
  message    String?
  createdAt  DateTime @default(now())

  @@index([projectId])
  @@map("exports")
}

model ChatMessage {
  id         String   @id @default(cuid())
  projectId  String
  project    Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  role       String
  content    String
  meta       String   @default("{}")
  createdAt  DateTime @default(now())

  @@index([projectId, createdAt])
  @@map("chat_messages")
}
